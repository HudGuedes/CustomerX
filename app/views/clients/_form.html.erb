<div class="container">
  <%= form_with model: @client do |form| %>
    <div class="form-group mb-3">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", autofocus: true %>
      <% @client.errors.full_messages_for(:name).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :email %>
      <%= form.text_field :email, class: "form-control", autofocus: true %>
      <% @client.errors.full_messages_for(:email).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>

     <div class="form-group mb-3">
      <%= form.label :email_secundario %>
      <%= form.text_field :email_secundario, class: "form-control", autofocus: true %>
      <% @client.errors.full_messages_for(:email_secundario).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>

    <div class="form-group mb-3">
      <%= form.label :telefone %>
      <%= form.text_area :telefone, class: "form-control", autofocus: true %>
      <% @client.errors.full_messages_for(:telefone).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>    

    <div class="form-group mb-3">
      <%= form.label :telefone_comercial %>
      <%= form.text_area :telefone_comercial, class: "form-control", autofocus: true %>
      <% @client.errors.full_messages_for(:telefone_comercial).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>    

    <div class="form-group mb-3">
      <%= form.label :data_de_registro %>
      <%= form.text_area :data_de_registro, class: "form-control", autofocus: true %>
      <% @client.errors.full_messages_for(:data_de_registro).each do |message| %>
        <div class="text-danger"><%= message %></div>
      <% end %>
    </div>
    <%= form.submit class: "btn btn-dark btn-block" %>
  <% end %>
</div>